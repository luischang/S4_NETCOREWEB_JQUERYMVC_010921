
@model IEnumerable<Customer>

<table id="tbClientes" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Apellidos</th>
            <th>Nombres</th>
            <th>Ciudad</th>
            <th>País</th>
            <th>Teléfono</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.LastName</td>
                <td>@item.FirstName</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.Phone</td>
                <td>
                    <button data-id="@item.Id" class="btn btn-warning btnEditarCliente">Editar</button>
                    <button data-id="@item.Id" class="btn btn-danger btnEliminarCliente">Eliminar</button>
                </td>
            </tr>
        }

    </tbody>
</table>